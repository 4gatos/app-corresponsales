.onboarding
  min-height 100vh
  width 100%
  display flex
  align-items center
  justify-content center
  z-index 1000
  background: 
    linear-gradient(
      rgba(0, 0, 0, 0.45), 
      rgba(0, 0, 0, 0.45)
    ),
    url('/static/img/home.jpg');
  background-size cover
  background-position top right

  .onboarding-route
    margin-top $m
    text-align center

    @media (max-width $maxTablet)
      display none

  .steps
    display flex
    flex-wrap wrap

    .step
      @media (max-width $maxTablet)
        &:not(.current)
          display none
      
      width 100%

      .step-icon
        text-align center
        margin-bottom $m

        .icon
          font-size 100px
          color $white

      @media (min-width $minDesk)
        width 33%

        .onboarding-buttons
          display none

  .onboarding-texts
    text-align center
    color $white

  .onboarding-buttons
    display flex
    flex-direction column
    align-items center

    .btn
      cursor pointer

    a:not(:first-child)
      margin-top $s

  