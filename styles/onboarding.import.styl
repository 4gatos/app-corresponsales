.onboarding
  min-height 100vh
  width 100%
  display flex
  align-items center
  justify-content center
  z-index 1000
  background: 
    linear-gradient(
      rgba(0, 0, 0, 0.45), 
      rgba(0, 0, 0, 0.45)
    ),
    url('/static/img/home.jpg');
  background-size cover
  background-position top right

  .onboarding-texts
    text-align center
    color $white

  .onboarding-buttons
    display flex
    flex-direction column
    align-items center

    a:not(:first-child)
      margin-top $s

  