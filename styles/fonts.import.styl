h1
  font-size 2.25rem
  line-height 2.5rem

h3
  font-size 1.3rem
  line-height 1.5rem

p
  font-size 1rem

a
  font-size 1rem
  font-weight 700
  text-decoration none
  
  &:not(.btn)
    color $primary !important

  &:hover
    text-decoration none !important

  &.interest-link:before
    content: "\e900";
    font-family: 'icomoon' !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    padding-right $xs