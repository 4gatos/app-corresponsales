nav
  height $headerFooter
  box-shadow: 0 -2px 4px 3px rgba(0,0,0,0.15);
  background-color $white
  position fixed
  bottom 0
  width 100%
  z-index $header

  .tabs
    height 100%
    display flex

    .tab
      width 50%

      &:not(:first-child)
        border-left 2px solid $lightGrey
      a
        width 100%
        height 100%

        display flex
        justify-content center
        align-items center

        span
          color $textGrey
          font-size 2rem

      .active
        span
          color $primary