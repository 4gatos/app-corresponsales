.sheet
  margin $headerFooter + $m 0

  h1
    font-size 2rem
    margin-top $m
    margin-bottom 0
    text-align center
    padding 0 4px
    font-weight bold

  .main-img
    &.double-img
      margin-bottom 80px
      position relative
      .avatar
        max-width 124px
        position absolute
        left 50%
        bottom 0
        transform translate(-50%, 50%)
        border-radius 50%

  .mapboxgl-map
    height 250px