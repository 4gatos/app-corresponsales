.card
  background-color $white
  padding $m
  margin $m 0
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.24), 0 0 2px 0 rgba(0,0,0,0.12);
  border-radius: 2px;
  transition all 0.3s ease-out

  .card-title
    display flex
    justify-content space-between
    align-items center
    margin-bottom $s

    & ~ .collapsed
      margin-bottom 0

    h3
      margin-bottom 0
      padding-right $xs

    button
      padding 0 8px
      transition all 0.2s ease-in

      &.turned
        transform rotateX(180deg)

  .card-body
    transition all 0.3s ease-out
    overflow hidden
    &.collapsed
      height 0 !important
      opacity 0
    img
      margin $m 0

      &:first-child
        margin-top 0

      &:last-child
        margin-bottom 0

    p
      &:last-child
        margin-bottom 0
