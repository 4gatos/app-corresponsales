.map-popup
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  display flex
  align-items flex-end
  flex-direction column

  .overlay
    background-color rgba(77, 166, 222, 0.5)
    height 50%
    width 100%

  .popup
    background-color $white
    height 50%
    width 100%
    padding $xxxl $m $m
    position relative

    .popup-img
      height 124px
      width 124px
      left 50%
      top 0
      transform translate(-50%, -50%)
      position absolute
      border-radius 50%
      overflow hidden

      img
        height 100%
        width 100%

    .popup-title
      font-size 2rem
      line-height 2.25rem
      font-weight bold
      text-align center